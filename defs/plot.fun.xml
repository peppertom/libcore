<function>
    <name>plot</name>
    <title>plot</title>
    <summary>Create a plot value</summary>
    <description>Creates a plot.</description>
    <examples>
        <example>
            <usage>plot(x)</usage>
        </example>
        <example>
            <usage>plot(x, y)</usage>
        </example>
        <example>
            <usage>plot({x: x, y: y})</usage>
        </example>
    </examples>
    <params>
        <param name="arg1" type="any">
            <description>Either an array or a table</description>
        </param>
        <param name="arg2" type="any">
            <default type="null">null</default>
            <description>An array</description>
        </param>
    </params>
    <return type="plot">
        <description>A new plot</description>
    </return>
    <implems>
        <implem language="js"/>
    </implems>
</function>
